{
    "require-dev": {
        "phalcon/ide-stubs": "^5.9",
        "phalcon/migrations": "^3.0",
        "squizlabs/php_codesniffer": "*",
        "friendsofphp/php-cs-fixer": "^3.91",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.4"
    },
    "scripts": {
        "php:cs": "phpcs --standard=PSR12 ./app",
        "cs": "php-cs-fixer fix --dry-run --diff",
        "cs:fix": "php-cs-fixer fix",
        "analyse": "phpstan --memory-limit=1G analyse",
        "test": [
            "@putenv XDEBUG_MODE=coverage",
            "XDEBUG_MODE=coverage phpunit --configuration phpunit.xml --coverage-html coverage --colors=always"
        ],
        "test:coverage": "phpdbg -qrr vendor/bin/phpunit --configuration phpunit.xml.dist --coverage-html var/coverage",
        "qa": [
            "@cs",
            "@analyse",
            "@test"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    }
}